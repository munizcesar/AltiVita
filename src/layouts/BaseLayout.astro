---
import { SITE_CONFIG } from '../config';
import SEO from '../components/SEO.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import AffiliateBanner from '../components/AffiliateBanner.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
  noindex?: boolean;
  showAffiliateBanner?: boolean;
}

const {
  title = SITE_CONFIG.title,
  description = SITE_CONFIG.description,
  image = SITE_CONFIG.ogImage,
  article = false,
  noindex = false,
  showAffiliateBanner = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png?v=2" />
    <link rel="shortcut icon" href="/favicon.png?v=2" />
    <link rel="apple-touch-icon" href="/logo-icon.png?v=2" />

    <link rel="canonical" href={canonicalURL} />

    <!-- SEO -->
    <SEO
      title={title}
      description={description}
      image={image}
      article={article}
      noindex={noindex}
      canonicalURL={canonicalURL.href}
    />

    <!-- Google Analytics -->
    <GoogleAnalytics />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />

    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <Header />

    {showAffiliateBanner && <AffiliateBanner />}

    <main>
      <slot />
    </main>

    <Footer />

    <style is:global>
      :root {
        /* Paleta AltiVita */
        --color-primary:        #0F2A44;
        --color-primary-dark:   #0A1C2E;
        --color-primary-light:  #1A3D5C;

        --color-action:         #2DBE60;
        --color-action-dark:    #25A352;
        --color-action-light:   #3DD672;

        --color-success:        #2DBE60;
        --color-success-dark:   #25A352;
        --color-success-light:  #3DD672;

        --color-urgent:         #FF6B35;
        --color-urgent-dark:    #E85D2C;

        --color-text:           #1F2937;
        --color-text-light:     #6B7280;
        --color-text-lighter:   #9CA3AF;
        --color-text-muted:     #64748B;

        --color-bg:             #FFFFFF;
        --color-bg-alt:         #F9FAFB;
        --color-border:         #E5E7EB;

        --color-warning:        #f59e0b;
        --color-danger:         #ef4444;
        --color-info:           #3b82f6;

        --max-width:  1200px;
        --spacing:    1rem;

        --font-sans:  'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-mono:  'JetBrains Mono', 'SF Mono', Monaco, monospace;
      }

      *, *::before, *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html, body {
        height: 100%;
      }

      body {
        font-family: var(--font-sans);
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        font-weight: 400;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      button {
        font-family: inherit;
      }

      .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--spacing);
      }

      /* Accessible focus */
      :focus-visible {
        outline: 3px solid rgba(45, 190, 96, 0.4);
        outline-offset: 2px;
      }
    </style>
  </body>
</html>
