---
import { SITE_CONFIG } from '../config';
import SEO from '../components/SEO.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import AffiliateBanner from '../components/AffiliateBanner.astro';
import Header from '../components/Header.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
  noindex?: boolean;
  showAffiliateBanner?: boolean;
}

const {
  title = SITE_CONFIG.title,
  description = SITE_CONFIG.description,
  image = SITE_CONFIG.ogImage,
  article = false,
  noindex = false,
  showAffiliateBanner = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon - Múltiplos formatos para melhor compatibilidade -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=3" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=3" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=3" />
    <link rel="shortcut icon" href="/favicon.ico?v=3" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=3" />
    <meta name="theme-color" content="#0F2A44" />
    
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Componente SEO -->
    <SEO 
      title={title}
      description={description}
      image={image}
      article={article}
      noindex={noindex}
      canonicalURL={canonicalURL.href}
    />
    
    <!-- Google Analytics -->
    <GoogleAnalytics />
    
    <!-- Preconectar a domínios externos -->
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    
    <!-- Tag Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>
  
  <body>
    <!-- Cabeçalho/Navegação -->
    <Header />
    
    <!-- Banner de Divulgação de Afiliados (se necessário) -->
    {showAffiliateBanner && <AffiliateBanner />}
    
    <!-- Conteúdo Principal -->
    <main>
      <slot />
    </main>
    
    <!-- Rodapé -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3><span class="logo-alti">Alti</span><span class="logo-vita">Vita</span></h3>
            <p>{SITE_CONFIG.slogan}</p>
            <p class="footer-tagline">{SITE_CONFIG.tagline}</p>
          </div>
          
          <div class="footer-section">
            <h4>Categorias</h4>
            <ul>
              <li><a href="/tech">Produtos Tech</a></li>
              <li><a href="/saas">Ferramentas SaaS</a></li>
              <li><a href="/software">Software</a></li>
              <li><a href="/guides">Guias</a></li>
            </ul>
          </div>
          
          <div class="footer-section">
            <h4>Empresa</h4>
            <ul>
              <li><a href="/about">Sobre Nós</a></li>
              <li><a href="/contact">Contato</a></li>
              <li><a href="/editorial-policy">Política Editorial</a></li>
            </ul>
          </div>
          
          <div class="footer-section">
            <h4>Legal</h4>
            <ul>
              <li><a href="/affiliate-disclosure">Divulgação de Afiliados</a></li>
              <li><a href="/privacy">Política de Privacidade</a></li>
              <li><a href="/terms">Termos de Uso</a></li>
            </ul>
          </div>
        </div>
        
        <div class="footer-bottom">
          <p>&copy; {SITE_CONFIG.foundedYear} {SITE_CONFIG.legalEntity}. Todos os direitos reservados.</p>
          <p class="disclaimer">
            {SITE_CONFIG.affiliates.amazonBR.disclaimer}
          </p>
        </div>
      </div>
    </footer>
    
    <style is:global>
      :root {
        /* Cores AltiVita - Azul Marinho + Verde GO */
        --color-primary: #0F2A44;
        --color-primary-dark: #0A1C2E;
        --color-primary-light: #1A3D5C;
        
        --color-action: #2DBE60;
        --color-action-dark: #25A352;
        --color-action-light: #3DD672;
        
        --color-success: #2DBE60;
        --color-success-dark: #25A352;
        --color-success-light: #3DD672;
        
        --color-urgent: #FF6B35;
        --color-urgent-dark: #E85D2C;
        
        --color-text: #1F2937;
        --color-text-light: #6B7280;
        --color-text-lighter: #9CA3AF;
        --color-bg: #FFFFFF;
        --color-bg-alt: #F9FAFB;
        --color-border: #E5E7EB;
        
        --color-warning: #f59e0b;
        --color-danger: #ef4444;
        --color-info: #3b82f6;
        
        --max-width: 1200px;
        --spacing: 1rem;
        
        --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-mono: 'JetBrains Mono', 'SF Mono', Monaco, 'Cascadia Code', monospace;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: var(--font-sans);
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
      }
      
      .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--spacing);
      }

      /* Rodapé */
      .site-footer {
        background: var(--color-bg-alt);
        border-top: 1px solid var(--color-border);
        padding: 3rem 0 1rem;
        margin-top: 4rem;
      }
      
      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
      }
      
      .footer-section h3 {
        margin-bottom: 1rem;
        color: var(--color-text);
        font-size: 1.5rem;
        font-weight: 700;
      }
      
      .footer-section h4 {
        margin-bottom: 1rem;
        color: var(--color-text);
        font-weight: 600;
      }
      
      /* Logo AltiVita no rodapé */
      .logo-alti {
        color: var(--color-primary);
        font-weight: 600;
      }
      
      .logo-vita {
        color: var(--color-action);
        font-weight: 700;
      }
      
      .footer-section ul {
        list-style: none;
      }
      
      .footer-section li {
        margin-bottom: 0.5rem;
      }
      
      .footer-section a {
        color: var(--color-text-light);
        text-decoration: none;
        transition: color 0.2s;
      }
      
      .footer-section a:hover {
        color: var(--color-action);
      }
      
      .footer-tagline {
        color: var(--color-text-light);
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }
      
      .footer-bottom {
        padding-top: 2rem;
        border-top: 1px solid var(--color-border);
        text-align: center;
        color: var(--color-text-light);
        font-size: 0.9rem;
      }
      
      .disclaimer {
        margin-top: 0.5rem;
        font-size: 0.85rem;
      }
    </style>
  </body>
</html>
