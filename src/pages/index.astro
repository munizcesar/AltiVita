---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG } from '../config';
import CategoryCard from '../components/CategoryCard.astro';
import { Target, BarChart3, Lightbulb, Flame, CheckCircle2, Search, Users, RefreshCw } from 'lucide-astro';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>
          <span class="hero-brand">
            <span class="hero-alti">Alti</span><span class="hero-vita">Vita</span>
          </span>
          <span class="hero-slogan">
            Encontre o Melhor. <span class="vita-emphasis">Vá com Confiança.</span>
          </span>
        </h1>
        <p class="hero-description">
          {SITE_CONFIG.description}
        </p>
        <div class="hero-cta">
          <a href="#categorias" class="btn btn-primary">Ver Categorias</a>
          <a href="/about" class="btn btn-outline">Sobre Nós</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories" id="categorias">
    <div class="container">
      <h2 class="section-title">O Que Avaliamos</h2>
      <p class="section-subtitle">
        Reviews especializados e guias de compra para você decidir com segurança
      </p>

      <div class="categories-grid">
        <CategoryCard
          title={SITE_CONFIG.categories.tech.name}
          description={SITE_CONFIG.categories.tech.description}
          icon={SITE_CONFIG.categories.tech.icon}
          href="/tech"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.saas.name}
          description={SITE_CONFIG.categories.saas.description}
          icon={SITE_CONFIG.categories.saas.icon}
          href="/saas"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.software.name}
          description={SITE_CONFIG.categories.software.description}
          icon={SITE_CONFIG.categories.software.icon}
          href="/software"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.guides.name}
          description={SITE_CONFIG.categories.guides.description}
          icon={SITE_CONFIG.categories.guides.icon}
          href="/guides"
        />
      </div>
    </div>
  </section>

  <!-- Em Breve Section -->
  <section class="featured">
    <div class="container">
      <h2 class="section-title">Em Breve</h2>
      <p class="section-subtitle">
        Estamos preparando reviews completos e guias de compra. Volte em breve!
      </p>

      <div class="coming-soon-grid">
        <div class="coming-soon-card">
          <div class="card-icon"><Target size={48} stroke-width={1.5} /></div>
          <h3>Reviews Detalhados</h3>
          <p>Análises honestas e aprofundadas dos melhores produtos de tecnologia</p>
        </div>
        <div class="coming-soon-card">
          <div class="card-icon"><BarChart3 size={48} stroke-width={1.5} /></div>
          <h3>Comparativos</h3>
          <p>Compare os melhores modelos lado a lado e escolha sem dúvida</p>
        </div>
        <div class="coming-soon-card">
          <div class="card-icon"><Lightbulb size={48} stroke-width={1.5} /></div>
          <h3>Dicas de Especialistas</h3>
          <p>Guias de compra e tutoriais da nossa equipe de entusiastas tech</p>
        </div>
        <div class="coming-soon-card">
          <div class="card-icon"><Flame size={48} stroke-width={1.5} /></div>
          <h3>Melhores Ofertas</h3>
          <p>As melhores promoções curadas em produtos top avaliados</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Por Que Confiar Section -->
  <section class="trust">
    <div class="container">
      <h2 class="section-title">Por Que Confiar na AltiVita?</h2>

      <div class="trust-grid">
        <div class="trust-item">
          <div class="trust-icon"><CheckCircle2 size={56} stroke-width={1.5} /></div>
          <h3>Reviews Imparciais</h3>
          <p>Opiniões honestas baseadas em pesquisa e testes reais</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon"><Search size={56} stroke-width={1.5} /></div>
          <h3>Pesquisa Aprofundada</h3>
          <p>Cada review é respaldado por análise extensiva e criteriosa</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon"><Users size={56} stroke-width={1.5} /></div>
          <h3>Foco no Usuário</h3>
          <p>Priorizamos suas necessidades, não apenas taxas de comissão</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon"><RefreshCw size={56} stroke-width={1.5} /></div>
          <h3>Sempre Atualizado</h3>
          <p>Atualizamos regularmente para refletir as informações mais recentes</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Pronto para Decidir Melhor?</h2>
      <p>Explore nossos reviews e guias para encontrar o produto ideal para você</p>
      <a href="#categorias" class="btn btn-cta">Começar Agora →</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    color: white;
    padding: 6rem 0;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-brand {
    display: block;
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .hero-alti {
    color: white;
    font-weight: 600;
  }

  .hero-vita {
    color: var(--color-action-light);
    font-weight: 800;
  }

  .hero-slogan {
    display: block;
    font-size: 1.75rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    opacity: 0.92;
    line-height: 1.3;
  }

  .vita-emphasis {
    color: var(--color-action-light);
    font-weight: 700;
  }

  .hero-description {
    font-size: 1.15rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
    opacity: 0.88;
    max-width: 640px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.9rem 2rem;
    font-size: 1.05rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.25s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--color-action);
    color: white;
    border-color: var(--color-action);
  }

  .btn-primary:hover {
    background: var(--color-action-dark);
    border-color: var(--color-action-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(45, 190, 96, 0.35);
  }

  .btn-outline {
    background: transparent;
    color: white;
    border: 2px solid rgba(255,255,255,0.7);
  }

  .btn-outline:hover {
    background: white;
    color: var(--color-primary);
    border-color: white;
  }

  .btn-cta {
    background: white;
    color: var(--color-action-dark);
    font-size: 1.1rem;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-weight: 700;
  }

  .btn-cta:hover {
    background: #f0fdf4;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(0,0,0,0.15);
  }

  /* Sections */
  section { padding: 4rem 0; }

  .section-title {
    font-size: 2.25rem;
    text-align: center;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-weight: 700;
  }

  .section-subtitle {
    font-size: 1.1rem;
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Categories */
  .categories { background: var(--color-bg-alt); }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  /* Coming Soon */
  .coming-soon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .coming-soon-card {
    padding: 2rem;
    background: white;
    border-radius: 12px;
    border: 2px solid var(--color-border);
    text-align: center;
    transition: all 0.25s ease;
  }

  .coming-soon-card:hover {
    border-color: var(--color-action);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(45, 190, 96, 0.12);
  }

  .card-icon {
    color: var(--color-primary);
    margin-bottom: 1.25rem;
    display: flex;
    justify-content: center;
  }

  .coming-soon-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .coming-soon-card p {
    color: var(--color-text-light);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* Trust */
  .trust { background: var(--color-bg-alt); }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 3rem;
    margin-top: 1rem;
  }

  .trust-item { text-align: center; }

  .trust-icon {
    color: var(--color-action);
    margin-bottom: 1.25rem;
    display: flex;
    justify-content: center;
  }

  .trust-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    font-weight: 600;
  }

  .trust-item p {
    color: var(--color-text-light);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* CTA Final */
  .cta-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    color: white;
    text-align: center;
    padding: 5rem 0;
  }

  .cta-section h2 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .cta-section p {
    font-size: 1.15rem;
    margin-bottom: 2rem;
    opacity: 0.88;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero { padding: 3.5rem 0; }
    .hero-brand { font-size: 2.5rem; }
    .hero-slogan { font-size: 1.3rem; }
    .section-title { font-size: 1.75rem; }
    .cta-section h2 { font-size: 1.75rem; }
    .categories-grid,
    .coming-soon-grid,
    .trust-grid { grid-template-columns: 1fr; }
  }
</style>
